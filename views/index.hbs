<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <button type="button" class="btn btn-outline-primary">
        <a href="/restaurant/new" style="text-decoration:none">Create a new restaurant</a>
      </button>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurant">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div>
        <div class="row row-cols-sm-3">
          {{#each restaurant as |res|}}
          <div class="card-deck mb-4">
            <div class="card">
              <div class="card">
                <img class="card-img-top" src="{{res.image}}" alt="{{res.name}}">
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{res.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{res.category}}
                  </div>

                  <span class="badge rounded-pill bg-danger font-weight-normal">
                    {{res.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-around">
                <button class="btn btn-primary" type="button"><a class="text-white" style="text-decoration: none;"
                    href="/restaurant/{{res.id}}/edit">Edit</a></button>
                <button class="btn btn-success" type="button"><a class="text-white" style="text-decoration: none;"
                    href="/restaurant/{{res.id}}">Details</a></button>
                <form action="/restaurant/{{res.id}}?_method=DELETE" method="POST" style="display:inline">
                  <button class="btn btn-danger" type="submit">Delete</button>
                </form>

              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

    </div>
  </div>

</div>